<%- include('header') %>
    <div class="page-content">
        <div class="container">
            <div class="card content-area">
                <div class="card-innr">
                    <div class="card-head">
                        <h4 class="card-title">User List</h4>
                    </div>
                    <table class="data-table userlist dt-init user-list">
                        <thead>
                            <tr class="data-item data-head">
                                <th class="data-col dt-user">User</th>
                                <th class="data-col dt-email">Phone</th>
                                <th class="data-col dt-verify">Verified Status</th>
                                <th class="data-col dt-login">Registration Date </th>
                                <th class="data-col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(var i of data){%>
                                <tr class="data-item">
                                    <td class="data-col dt-user">
                                        <span class="lead user-name">
                                            <%=i.Fname%>
                                                <%=i.Lname%>
                                        </span>
                                        <span class="sub user-id">
                                            <%=i.email%>
                                        </span>
                                    </td>
                                    <td class="data-col dt-email">
                                        <span class="sub sub-s2 sub-email">
                                            <%=i.phone%>
                                        </span>
                                    </td>
                                    <td class="data-col dt-verify">
                                        <ul class="data-vr-list">
                                            <li>
                                                <div class="data-state data-state-sm data-state-approved "></div> Email
                                            </li>
                                            <% if (i.Kyc_id && i.Kyc_id.Status === 'Pending') { %>
                                                <div class="data-state data-state-sm data-state-pending"></div> KYC
                                            <% } else if (i.Kyc_id && i.Kyc_id.Status === 'Approved') { %>
                                                <div class="data-state data-state-sm data-state-approved"></div> KYC
                                            <% } else if (i.Kyc_id && i.Kyc_id.Status === 'Cancelled') { %>
                                                <div class="data-state data-state-sm data-state-pending"></div> KYC
                                                <% } else { %>
                                                <div class="data-state data-state-sm data-state-pending"></div>No KYC
                                                    
                                            <% } %>



                                        </ul>
                                    </td>
                                    <td class="data-col dt-login">
                                        <span class="sub sub-s2 sub-time">
                                            <%= i.formattedCreateTime %>
                                        </span>
                                    </td>
                                    <td class="data-col dt-status">
                                        <% if (i.status===true ) { %>
                                            <span class="dt-status-md badge badge- badge-success badge-md">Active</span>
                                            <span
                                            class="dt-status-sm badge badge-sq badge-outline badge-success badge-md">A</span>
                                            <% } else if (i.status===false ) { %>
                                                <span
                                                    class="dt-status-md badge badge- badge-danger badge-md">Suspend</span>
                                                    <span
                                                    class="dt-status-sm badge badge-sq badge-outline badge-danger badge-md">S</span>
                                                <% } %>
                                                   
                                    </td>
                                    <td class="data-col text-right">
                                        <div class="relative d-inline-block">
                                            <a href="#" class="btn btn-light-alt btn-xs btn-icon toggle-tigger"><em
                                                    class="ti ti-more-alt"></em></a>
                                            <div class="toggle-class dropdown-content dropdown-content-top-left">
                                                <ul class="dropdown-list">
                                                    <li><a href="/admin/UserDetails/<%= i._id %>"><em
                                                                class="ti ti-eye"></em> View
                                                            Details</a></li>
                                                    <li><a href="/admin/UserStatus/<%=i._id%>"><em
                                                                class="ti ti-na"></em> Suspend</a></li>
                                                    <li><a href="#"><em class="ti ti-trash"></em> Delete</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>