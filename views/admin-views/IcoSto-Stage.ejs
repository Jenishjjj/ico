<%- include('header') %>
    <div class="page-content">
        <div class="container">
            <%if(flash.success && flash.success.length> 0){%>
                <div class="alert form-control" style="padding-left: 25px; color: black; padding-top: 8px;">
                    <%=flash.success%>
                </div>
                <%}%>
                    <div class="content-area card">
                        <div class="card-innr">
                            <div class="card-head d-flex justify-content-between">
                                <h4 class="card-title">ICO/STO Stages</h4>
                                <a class="btn btn-sm btn-auto btn-primary d-sm-inline-block d-none"
                                    href="/admin/addStage">Add
                                    Stage</a>
                            </div>
                            <table class="data-table dt-init kyc-list icosto-stage">
                                <thead>
                                    <tr class="data-item data-head">
                                        <th class="data-col dt-user">Stage Name</th>
                                        <th class="data-col dt-doc-type">Start Date</th>
                                        <th class="data-col dt-doc-front">End Date</th>
                                        <th class="data-col dt-doc-back">Total Token</th>
                                        <th class="data-col dt-status">Price</th>
                                        <th class="data-col dt-extra dt-status">Extra Bonus</th>
                                        <th class="data-col dt-stat dt-status">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (var i of data) { %>
                                        <tr class="data-item">
                                            <td class="data-col dt-user">
                                                <span class="lead user-name">
                                                    <%= i.Stage_Name %>
                                                </span>
                                            </td>
                                            <td class="data-col dt-user">
                                                <span class="lead user-name">
                                                    <%= i.Start_Date.toDateString() %>
                                                </span>
                                            </td>
                                            <td class="data-col dt-user">
                                                <span class="lead user-name">
                                                    <%= i.End_Date.toDateString() %>
                                                </span>
                                            </td>
                                            <td class="data-col dt-user dt-doc-back">
                                                <span class="lead user-name ">
                                                    <%= i.Total_Token %>
                                                </span>
                                                <span class="sub sub-symbol">
                                                    <%= webSettingData.Tokensymbol %>
                                               </span>
                                            </td>
                                            <td class="data-col dt-status">
                                                <span class="lead user-name">
                                                    <%= i.Base_Token_Price %>
                                                    
                                                </span>
                                                <span class="sub sub-symbol">

                                                    USD
                                                </span>
                                            </td>
                                            <td class="data-col dt-user">
                                                <span class="lead user-name dt-extra ">
                                                    <%= i.Bonus_Percentage %>% 
                                                </span>
                                            </td>
                                            <td class="data-col dt-stat dt-status">
                                                <% if (i.Start_Date > new Date()) { %>
                                                     

                                                        <span class="dt-status-md badge btn btn-warning badge-md">Upcoming</span>

                                                    <% } else if (i.Start_Date <= new Date() && i.End_Date >= new Date()) { %>
                                                        <span class="dt-status-md btn btn-success badge-md">Active</span>

                                                    <% } else { %>
                                                    
                                                            <span class="dt-status-md badge btn btn-danger badge-md">Expired</span>

                                                    <% } %>
                                            </td>
                                            <td class="data-col text-center">
                                                <div class="relative d-inline-block">
                                                    <a href="#" class="btn btn-light-alt btn-xs btn-icon toggle-tigger">
                                                        <em class="ti ti-more-alt"></em>
                                                    </a>
                                                    <div class="toggle-class dropdown-content dropdown-content-top-left">
                                                        <ul class="dropdown-list">
                                                            <li>
                                                                <a href="/admin/AddIcoStoDelete/<%= i._id %>">
                                                                    <em class="ti ti-trash"></em> Delete
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="/admin/UpdateIcoSto/<%= i._id %>">
                                                                    <em class="ti ti-trash"></em> Update
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
        </div>
    </div>
    <%- include('footer') %>